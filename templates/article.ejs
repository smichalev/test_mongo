<%- include('./header', {title: 'Просмотр статьи: ' + article.title}); %>

<h1><%= article.title %></h1>
<div style="border: 1px solid #ccc; background: #fff; padding: 5px; border-radius: 5px">
    <div style="display: flex; justify-content: space-between; align-items: center">
    <span style="font-size: 14px; text-transform: uppercase">Автор: <b>
            <% if(article.Creater && article.Creater.login) { %>
                <%= article.Creater.login %>
            <% } else { %>
                НЕИЗВЕСТЕН
            <% } %>
        </b> Дата: <%= article.date %></span>
        <% if(myarticle) { %>
            <div style="display: flex">
                <form action="/edit/<%= article._id %>" method="get" style="margin: 0 5px">
                    <input type="submit" value="Редактировать">
                </form>
                <form action="/<%= article._id %>" method="post" style="margin: 0 5px">
                    <input type="submit" value="Удалить">
                </form>
            </div>
        <% } %>
    </div>
    <p style="font-size: 20px; margin-top: 5px"><%= article.content %></p>
</div>
<%- include('./footer'); %>

